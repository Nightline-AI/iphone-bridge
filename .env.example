# Nightline iPhone Bridge Configuration
# Copy this file to .env and update the values

# Nightline server URL (where to forward incoming messages)
NIGHTLINE_SERVER_URL=https://api.nightline.ai

# Shared secret for webhook authentication (generate a secure random string)
WEBHOOK_SECRET=change-me-generate-a-secure-random-string

# Polling interval for chat.db in seconds (lower = faster but more CPU)
POLL_INTERVAL=2.0

# Server binding
HOST=0.0.0.0
PORT=8080

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Process messages from before startup? (usually false)
PROCESS_HISTORICAL=false
